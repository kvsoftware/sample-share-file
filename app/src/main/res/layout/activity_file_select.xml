<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview_mario"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageview_luigi"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_luigi"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageview_mario"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_mario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_file_select_btn_mario"
        app:layout_constraintLeft_toLeftOf="@id/imageview_mario"
        app:layout_constraintRight_toRightOf="@id/imageview_mario"
        app:layout_constraintTop_toBottomOf="@id/imageview_mario" />

    <Button
        android:id="@+id/button_luigi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_file_select_btn_luigi"
        app:layout_constraintLeft_toLeftOf="@id/imageview_luigi"
        app:layout_constraintRight_toRightOf="@id/imageview_luigi"
        app:layout_constraintTop_toBottomOf="@id/imageview_luigi" />

</androidx.constraintlayout.widget.ConstraintLayout>